---
import fbIcon from '../../assets/fb_icon.svg';
import igIcon from '../../assets/ig_icon.svg';
import ytIcon from '../../assets/yt_icon.svg';
---
<div id="footerlol">
</div>

<footer>
    <div id="footer-gradient">
    </div>
    <div class="footer">
        <div class="footer-left">
            <h2>JOIN US</h2>
            <p id="pod-dolacz">and enter the world of music with us:</p>
            <form id="newsletter-input" action="https://buttondown.email/api/emails/embed-subscribe/szymon" method="post">
                <input id="newsletter-input-email" type="email" name="email" placeholder="Email" required>
                <label for="Email" class="form__label">E-mail</label>                <button class="btn" type="submit" value="Subscribe">
                    <p id="btn-txt" style="position: absolute; z-index: 6;">     
                        SUBSCRIBE
                    <p/>
                </button>
            </form>
        </div>
        <div class="footer-right">
            <h3>Contact</h3>
            <a id="emailson" href="mailto:fantastica.ensemble@gmail.com" data-astro-reload>fantastica.ensemble@gmail.com</a>
            <div class="footer-social-icons">
                <a href="https://www.youtube.com/@owczarekobodaduo3746" class="footer-right-icon-container"><img class="footer-right-icon" src={ytIcon.src} alt="youtube" loading="lazy" decoding="async"/> <span>youtube</span></a>
                <a href="https://www.instagram.com/fantastica.ensemble/" class="footer-right-icon-container"><img class="footer-right-icon" src={igIcon.src} alt="instagram" loading="lazy" decoding="async"/> <span>instagram</span></a>
                <a href="https://www.facebook.com/fantastica.ensemble" class="footer-right-icon-container"><img class="footer-right-icon" src={fbIcon.src} alt="facebook" loading="lazy" decoding="async"/> <span>facebook</span></a>
            </div>
        </div>
    </div>
</footer>

<style>

    #footerlol {
        height:  calc(42vh + 103px);
        width: 100%;
        pointer-events: none
    }
    
    footer {
        overflow: hidden;
        position: fixed;
        bottom: 0;
        width: 100vw;
        z-index: -9;
    }
    #footer-gradient {
        top: 0;
        left: 0;
        width: -webkit-fill-available;
        height: 512px;
        background: linear-gradient(90deg, #E180A9 23.5%, #2599F8 100%);
    }

    .footer {
        font-family: "Gilda Display";
        height: 42vh;
        background-color: black;
        color: #FFF;
        padding: 40px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .footer-left {
        flex: 67;
        height: 100%;
        margin: 6vh 2vh 0vh 1vh;
    }

    .footer-left h2 {
        margin-bottom: 3vh;
        font-size: 6vh;
        font-weight: normal;
    }
/* 
    .footer-left input {
        background: transparent;
        border: none;
        border-bottom: 1px solid white;
        color: white;
        font-size: 16px;
        padding: 19px;
        width: calc(62vw - 355px);
        outline: none;
    } */

    #newsletter-input {
        display: flex;
        position: absolute;
        width: 49vw;
    }
    #newsletter-input-email {
        margin-right: 2vw;

        font-family: inherit;
        width: 100%;
        border: none;
        border-bottom: 2px solid #9b9b9b;
        outline: 0;
        font-size: 21px;
        color: #fff;
        padding: 7px 0;
        background: transparent;
        transition: border-color 0.2s;
    }
    #newsletter-input-email::placeholder {
        color: transparent;
    }
    #newsletter-input-email:focus {
        padding-bottom: 6px;
        font-weight: 700;
        border-width: 3px;
        border-image: linear-gradient(to right, #eb95b8, #b05fab);
        border-image-slice: 1;
    }
    #newsletter-input-email:placeholder-shown ~ .form__label {
        font-size: 27px;
        cursor: text;
        top: 10px;
    }
    .form__label {
        position: absolute;
        top: -20px;
        display: block;
        transition: 0.2s;
        font-size: 21px;
        color: #9b9b9b;
        pointer-events: none;
    }
    #newsletter-input-email:focus ~ .form__label {
        position: absolute;
        top: -20px;
        display: block;
        transition: 0.2s;
        font-size: 21px;
        color: #e3d0e2;
        font-weight: 700;
        transition: 0.2s;
    }

    
    .btn {
        background: black;
        border: 1px solid #e0e0e0;
        outline: none;
        width: 155px;
        padding: 12px 40px;
        height: 60px;
        border-radius: 3px;
        overflow: hidden;
        transform: scaleX(1);
        transition: transform 0.5s cubic-bezier(0.4, 0, 0, 1);
        display: flex;
        justify-content: center;
        align-items: center;
        cursor: pointer;  
    }
    #btn-txt {
        color: white;
        width: 100%;
        height: 100%;
        text-align: center;  
        transition: all 0.3s ease;
        font-size: 15px;
        padding-top: 41px;
    }
    #btn-txt:hover {
        color: black;
    }
    .btn:hover {
        animation: animate-scaleX 0.6s cubic-bezier(0.4, 0, 0, 1);
        background: transparent;
        color: black;
    }

    .btn::after {
        color: black;
        content: "";
        position: absolute;
        left: 0;
        bottom: 0;
        background: white;
        transition: transform 0.5s cubic-bezier(0.4, 0, 0, 1),
            border-radius 0.5s cubic-bezier(0.4, 0, 0, 1);
        width: 100%;
        height: 100%;
        border-radius: 50% 50% 0 0;
        transform: translateY(100%);
    }

    .btn:hover::after {
        transform: translateY(0%);
        border-radius: 0;
    }

    .btn span {
        font-size: 20px;
        font-weight: 500;
        overflow: hidden;
        position: relative;
        color: white;
    }

    .btn span:after {
        width: 100%;
        height: 100%;
        transition: transform 0.5s cubic-bezier(0.4, 0, 0, 1);
        content: attr(data-text);
        display: flex;
        justify-content: center;
        align-items: center;
        position: absolute;
        left: 50%;
        bottom: 0;
        z-index: 1;
        transform: translate(-50%, 100%);
        color: black;
    }
    .btn:hover span:after {
        transform: translate(-50%, 0);
    }

    .btn:focus {
        outline: none;
    }

    @keyframes animate-scaleX {
        0% {
            transform: scaleX(1);
        }
        50% {
            transform: scaleX(1.05);
        }
        100% {
            transform: scaleX(1);
        }
    }

    .footer-right {
        height: 78%;
        padding: 8vh 2vh 2vh 1vh;
        display: flex;
        flex-direction: column;
        flex: 33;
        text-align: left;
    }

    .footer-right h3 {
        font-size: 38px;
        margin-top: 0;
        margin-bottom: 15px;
    }
    
    #emailson {
        margin-bottom: 7.2vh;
        text-decoration: underline;
    }

    .footer-right a {
        color: #FFF;
        font-size: 24px;
        text-decoration: none;
        margin-top: auto;
    }

    .footer-right-icon {
        width: 30px;
        margin-right: 2.7vh;
    }

    .footer-right-icon-container {
        display: flex;
        color: #FFF;
        font-size: 24px;
        flex-direction: row;
        align-items: center;
        margin-bottom: 2.2vh;
    }

    #pod-dolacz {
        display: block;
        font-size: 2.9vh;
        margin-left: 1vw;
        margin-top: 0;
        margin-bottom: 8.9vh;
    }
    
    @media screen and (max-width: 1000px) { 
        .footer-left > h2 {
            font-size: 5.2vw;
        }
        #pod-dolacz {
            font-size: 2.6vw;
        }

        #emailson {
            font-size: 2.3vw;
        }
    }

    @media screen and (max-width: 700px) { 
        #footerlol {
            height: calc(93vw + 100px);   
        }
        #pod-dolacz {
            display: none;
        }
        footer {
            width: -webkit-fill-available;
        }
        .footer {
            flex-direction: column;
            padding: 8vw 15px;
            height: 95vw;
        }
        .footer-left {
            margin: 0;
        }
        .footer-left h2 {
            margin: 0 0 5vw 0;
            font-size: 10.6vw;
            justify-self: center;
        }
        /* .footer-left input {
            width: 44%;
        } */
        #newsletter-input {
            justify-self: center;
            width: 90%;
            margin: 0;
            position: relative;
            padding-top: 1vh;
        }
        #newsletter-input-email {
            font-size: 19px;    
            top: 18px;
        }

        #newsletter-input-email:placeholder-shown ~ .form__label {
            font-size: 14px;
            top: 28px;
        }
        .form__label {
            top: 0px;
            font-size: 14px;
        }
        #newsletter-input-email:focus ~ .form__label {
            font-size: 14px;
            top: 0px;
        }


        .footer-right {
            align-self: baseline;
            width: 98%;
            padding: 5vh 0vh 0vh 1vh;
        }
        .footer-right h3 {
            font-size: 26px;
        }

        #emailson {
            font-size: 21px;
        }

        .footer-right-icon-container {
            flex-direction: column;
            width: fit-content;
            font-size: 21px;
        }

        .footer-social-icons {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            margin: 0 1.5vw;
        }
        .footer-right-icon {
            margin: 0 0 2.5vw 0;
        }
    }
</style>