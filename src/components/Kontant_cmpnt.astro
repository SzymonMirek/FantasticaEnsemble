---
import kontaktImg from '../assets/kontakt.png';
import fbIcon from '../assets/fb_icon.svg';
import igIcon from '../assets/ig-kontakt.svg';
---
<div class="kontakt-container">
    <div class="heading-kontakt">
        <h1>Chesz z nami współpracować?</h1>
    </div>
    <div class="kontakt">
        <h3>Kontakt</h3>
        <a id="emailson" href="mailto:owczareklobodaduo@gmail.com">owczareklobodaduo@gmail.com</a>
        <div class="footer-social-icons-kontakt">
            <a href="https://www.instagram.com/fantastica.ensemble/" class="footer-right-icon-container"><img class="footer-right-icon" src={igIcon.src} alt="instagram" /> <span>instagram</span></a>
            <a href="https://www.facebook.com/fantastica.ensemble" class="footer-right-icon-container"><img class="footer-right-icon" src={fbIcon.src} alt="facebook" /> <span id="footer-right-text-fb">facebook</span></a>
        </div>
    </div>
    <img class="kontaktImg" src={kontaktImg.src} alt="" />

</div>

<style>
    .kontakt-container {
        overflow: hidden;
        display: grid;
        grid-template-columns: minmax(440px, 34vw) 1fr;
        grid-template-rows: 50vh 50vh;
        background: var(--fanstasticos-gradient, linear-gradient(180deg, #E180A9 23%, #2599F8 100%));
        font-weight: normal;
        }
    .heading-kontakt {
        padding-top: 15vw;
        grid-row: 1/2;
        grid-column: 1/2;
    }
    .kontakt {
        grid-row: 2/3;
        grid-column: 1/2;
    }
    .kontaktImg {
        grid-row: 1/3;
        grid-column: 2/3;
        object-fit: cover;
        width: 66vw;
        height: 100vh;
        box-shadow: -2px 1px 8.7px 0px rgba(0,0,0,0.25);
    }

    h1 {
        font-size: 41.3px;
        font-family: "Gilda Display";
        color: #FFF;
        font-weight: normal;
    }

    h3 {
        font-size: 38px;
        padding-top: 0;
        padding-bottom: 15px;
        color: #FFF;
        font-weight: normal;
        margin-bottom: 0vh;
    }
    #emailson {
        color: -webkit-link;
        cursor: pointer;
        text-decoration: underline;
        font-size: 24px;
        display: block;
        padding-top: auto;
        color: white;
    }
    .footer-social-icons-kontakt {
        display: flex;
        justify-content: space-between;
        padding-top: 3.8vh;
        width: 370px;
    }
    .footer-right-icon-container {
        font-family: "Gilda Display";
        font-size: 20px;
        color: white;
        width: 169px;
        height: 66px;
        border-radius: 17px;
        border: 1px solid #D9D9D9;

        display: flex;
        align-items: center;
        justify-content: space-evenly;
        text-decoration: none;
    }

    .heading-kontakt, .kontakt {
        padding-left: 2.7vw;
        padding-right: 2.7vw;
        margin-top: 4vh;
    }
    .kontakt {
        padding-top: 12vh;
    }

    #footer-right-text-fb {
        padding-right: 12px;
    }

    .footer-right-icon {
        height: 33px;
    }
    @media screen and (max-width: 700px) 
    {
        .kontakt-container {
            grid-template-rows: 77vw 0.9fr 1fr;
            grid-template-columns: 100vw;
            height: -webkit-fill-available;
            overflow: scroll;
        }
        .heading-kontakt {
            padding-top: 19vh;
            grid-row: 1/2;
            grid-column: 1/2;
            margin-top: -3vh;
        }
        .kontaktImg {
            grid-row: 2/3;
            grid-column: 1/2;
            width: 93vw;
            height: 30vh;
            justify-self: anchor-center;
            border-radius: 8px;
            
        }
        .kontakt {
            grid-row: 3/4;
            grid-column: 1/2;

            padding-top: 0%;
            margin-top: 0;
        }
        
    }

    @media screen and (max-width: 400px) {
        .footer-social-icons-kontakt {
            width: 94vw;
            column-gap: 17px;
        }
    }

</style>