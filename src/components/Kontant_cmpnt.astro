---
import kontaktImg from '../assets/kontakt.png';
import fbIcon from '../assets/fb_icon.svg';
import igIcon from '../assets/ig-kontakt.svg';
---
<div class="kontakt-container">
    <div class="heading-kontakt">
        <h1>Chcesz z nami współpracować?</h1>
    </div>
    <div class="kontakt">
        <div class="footer-left">
            <h2>DOŁĄCZ DO NAS</h2>
            <form action="https://buttondown.email/api/emails/embed-subscribe/szymon" method="post">
                            <input type="email" name="email" placeholder="E-mail" required>
            <button type="submit" value="Subscribe">ZAPISZ SIĘ</button>
            </form>
        </div>
        <h3>Kontakt</h3>
        <a id="emailson" href="mailto:owczareklobodaduo@gmail.com">owczareklobodaduo@gmail.com</a>
        <div class="footer-social-icons-kontakt">
            <a href="https://www.instagram.com/fantastica.ensemble/" class="footer-right-icon-container"><img class="footer-right-icon" src={igIcon.src} alt="instagram" /> <span>instagram</span></a>
            <a href="https://www.facebook.com/fantastica.ensemble" class="footer-right-icon-container"><img class="footer-right-icon" src={fbIcon.src} alt="facebook" /> <span id="footer-right-text-fb">facebook</span></a>
        </div>
    </div>
    <img class="kontaktImg" src={kontaktImg.src} alt="" />
</div>

<style>
/* Newsletter */
.footer-left {
    display: flex;
    flex-direction: column;
    gap: 10px;
}    

.footer-left h2 {
        margin-bottom: 16vh;
        font-size: 38px;
        font-weight: normal;
        color: white;
    margin-bottom: 0.7vh;
    }
.footer-left input {
        background: transparent;
        border: none;
        border-bottom: 1px solid white;
        color: white;
        font-size: 16px;
        padding: 19px;
        width: calc(62vw - 355px);
        outline: none;
        width: -webkit-fill-available;
    }

    .footer-left button {
        background: transparent;
        font-family: "Gilda Display";
        border: 1px solid #FFF;;
        color: #FFF;
        cursor: pointer;
        margin-left: 20px;
        padding: 18px 23px;
        margin-left: 0;
        float: right;
        font-size: 15px;
        border-radius: 17px;
        width: 170px;
        text-wrap: nowrap;
    }
    form {
        display: flex;    
        /* column-gap: 21px; */
        justify-content: space-between;
        column-gap: 15px;
    }

    input::placeholder {
        color: white;
    }

/* Newsletter end */
    .kontakt-container {
        overflow: hidden;
        display: grid;
        grid-template-columns: minmax(440px, 34vw) 1fr;
        grid-template-rows: 50vh minmax(450px, 50vh);
        background: var(--fanstasticos-gradient, linear-gradient(180deg, #E180A9 23%, #2599F8 100%));
        font-weight: normal;
        }
    .heading-kontakt {
        grid-row: 1/2;
        grid-column: 1/2;
        margin-bottom: 10vh;
        align-self: end;
    }
    .kontakt {
        grid-row: 2/3;
        grid-column: 1/2;
        padding-top: -8vh;
    }
    .kontaktImg {
        grid-row: 1/3;
        grid-column: 2/3;
        object-fit: cover;
        width: 66vw;
        height: -webkit-fill-available;
        box-shadow: -2px 1px 8.7px 0px rgba(0,0,0,0.25);
    }

    h1 {
        font-size: 41.3px;
        font-family: "Gilda Display";
        color: #FFF;
        font-weight: normal;
    }

    h3 {
        font-size: 38px;
        padding-top: 0;
        padding-bottom: 15px;
        color: #FFF;
        font-weight: normal;
        margin-bottom: 0vh;
    }
    #emailson {
        color: -webkit-link;
        cursor: pointer;
        text-decoration: underline;
        font-size: 24px;
        display: block;
        padding-top: auto;
        color: white;
    }
    .footer-social-icons-kontakt {
        display: flex;
        justify-content: space-between;
        padding-top: 3.8vh;
        width: 370px;
    }
    .footer-right-icon-container {
        font-family: "Gilda Display";
        font-size: 20px;
        color: white;
        width: 169px;
        height: 66px;
        border-radius: 17px;
        border: 1px solid #D9D9D9;

        display: flex;
        align-items: center;
        justify-content: space-evenly;
        text-decoration: none;
    }

    .heading-kontakt, .kontakt {
        padding-left: 2.7vw;
        padding-right: 2.7vw;
        margin-top: 4vh;
    }

    #footer-right-text-fb {
        padding-right: 12px;
    }

    .footer-right-icon {
        height: 33px;
    }
    @media screen and (max-width: 700px) 
    {
        .kontakt-container {
            grid-template-rows: 39vh 1fr;
            grid-template-columns: 100vw;
            height: -webkit-fill-available;
            overflow: clip;
        }
        .heading-kontakt {
            padding-top: 19vh;
            grid-row: 1/2;
            grid-column: 1/2;
            margin-top: -3vh;
            margin-bottom: 0;
        }
        .kontaktImg {
            /* opacity: 0; */
            /* grid-row: 2/3;
            grid-column: 1/2;
            width: 93vw;
            height: 30vh;
            justify-self: center;
            border-radius: 8px; */
            
        }
        .kontakt {
            padding-top: 0%;
            margin-top: 0;
            grid-row: 2 / 3;
            grid-column: 1 / 2;
            align-content: end;
            padding-bottom: 10vh;
        }
        .footer-left {
            justify-self: center;
            width: 92vw;
        }
        form {
            padding-right: 27px;
        }
        .footer-left input {
            width: auto;
        }
        
        h2 {
            margin-top: 0;
        }
        .footer-social-icons-kontakt {
            justify-self: center;
            width: 92vw;
        }
    }

    @media screen and (max-width: 400px) {
        .footer-social-icons-kontakt {
            width: 94vw;
            column-gap: 17px;
        }
    }

</style>