  grid-row: 2/3;
  grid-column: 1/2;
}

/* Container 4 Container 4 Container 4 Container 4 Container 4 Container 4 Container 4 Container 4 */
.albumy-biber4-container > .albumy-biber3-text >.albumy-biber3-text-inside {
  grid-template-rows: 54px auto;
}
.albumy-biber4-container > .albumy-biber3-text >.albumy-biber3-text-inside > h4 {
  grid-column: 1/3;
  font-size: 4.5vw;
  margin-bottom: 0;
  height: 34px;
}
.albumy-biber4-container > .albumy-biber3-text >.albumy-biber3-text-inside > p {
  grid-column: 1/3;
  margin-top: 1.6vh;
}
}
</style>
